<div class="formScreen">
    <main class="form">
        <%= render partial: "shared/back_arrow", locals: { image_name: 'black_arrow.svg' } %>
        <h1>Alterar senha</h1>
        <%= form_with model: Current.user, url: password_path do |form|%>
            <% if form.object.errors.any? %>
                <div class="alert alert-danger">
                    <% form.object.errors.full_messages.each do |message| %>
                        <div><%= message %></div>
                    <% end %>
                </div>
            <% end %>
            <div class="mb-3">
                <%= form.label "Senha" %>
                <%= form.password_field :password, placeholder: "senha", class: "form-control"%>
            </div>
            <div class="mb-3">
                <%= form.label "ConfirmaÃ§Ã£o de Senha" %>
                <%= form.password_field :password_confirmation, placeholder: "senha", class: "form-control"%>
            </div>
            <div>
                <%= form.submit "Alterar Senha", class:"btn btn-primary" %>
            </div>
        <% end %>
    </main>
</div>