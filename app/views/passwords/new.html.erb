<h1 class="text-center mb-3">Recover Password</h1>

<%= form_with url: passwords_path, scope: :user do |form| %>
  <div class="form-floating mb-3">

    <%= form.email_field :email, required: true, class: "form-control", placeholder: "email" %>
    <%= form.label :email %>
  </div>
  <div class="d-flex justify-content-end">

    <%= form.submit "Reset Password", class: "btn btn-danger" %>
  </div>

<% end %>